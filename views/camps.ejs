<%include partials/header%>
   <div class='container'>
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!!!</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p> 
                     <a href="/camp_grounds/new" class='btn btn-primary btn-lg'>Add a new camp ground</a>
                </p>
            </div>
            </header>
        </header>
       
      <div class='row text-center' style="display:flex; flex-wrap: wrap">
            <%camps.forEach(function(camp){%>
                <div class='col-md-3 col-sm-6'>
                    <div class="thumbnail">
                    <img src="<%=camp.image%>">
                    <div class="caption">
                            <h4><%=camp.name%></h4>
                            <a href="/camp_grounds/<%=camp['_id']%>" class='btn btn-primary btn-sm'>Explore</a>
                    </div>
                    </div>
                </div>
            <%});%>
      </div>
        
    </div>
   <%include partials/footer %> 