<% include partials/header %>
<div class='container'>
    <div class="row text-center">
            <h1>Create a new Campground</h1>
            <div style="width:30%; margin : 30px auto">
            <form action="/camp_grounds" method="POST">
                <div class="form-group">
                        <input class="form-control" type='text' name='name' placeholder="name of place">
                 </div>
                 <div class="form-group">
                        <input class="form-control" type='text' name='image' placeholder="Image url">
                 </div>
                 <div class="form-group">
                    <input class="form-control" type='text' name='description' placeholder="Image url">
                   </div>
                 <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
                </form>
                <a href="/camp_grounds">Go Back</a>
            </div>
    </div>
</div>
